<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ScrollView 直下は 1 子要素のみ -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- タイトル -->
        <TextView
            android:id="@+id/tvTitle"
            android:text="Settings"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchNightDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ナイトモード（Storyで減光・暖色）"
            android:layout_marginTop="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNight10m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ナイト：10分"
            android:layout_marginTop="8dp"/>

        <!-- 通知スイッチ（Material） -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchNotif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="“今日の話” 通知（毎日20:00）"
            app:useMaterialThemeColors="true" />

        <!-- 速度 -->
        <TextView
            android:id="@+id/tvRate"
            android:text="Speed (0.5–1.5):"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/seekRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />

        <!-- ピッチ -->
        <TextView
            android:id="@+id/tvPitch"
            android:text="Pitch (0.8–1.2):"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/seekPitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />

        <!-- プレビュー（Material） -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPreview"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="20dp"
            android:text="プレビュー（こんにちは）"
            app:cornerRadius="16dp" />

        <TextView
            android:id="@+id/tvValues"
            android:text="rate=, pitch="
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 言語選択（アプリ言語） -->
        <TextView
            android:id="@+id/tvLangLabel"
            android:text="アプリ言語（朗読と“今日の話”に反映）"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Lint: Touch target size too small 対策 → 高さ48dp以上 & パディング -->
        <Spinner
            android:id="@+id/spinnerLang"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
        <!-- ※ entries は Kotlin 側で ArrayAdapter を設定する想定。 -->

        <!-- リセット（Material） -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReset"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="16dp"
            android:text="デフォルトに戻す"
            app:cornerRadius="16dp" />

        <!-- セクション: このアプリについて -->
        <TextView
            android:id="@+id/tvAbout"
            android:text="このアプリについて"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- プライバシー / クレジット / 安全ガイド（Material + アイコン + 余白） -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrivacy"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="12dp"
            android:text="@string/open_privacy"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/ic_menu_info_details"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCredits"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"
            android:text="@string/open_credits"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/ic_menu_info_details"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSafety"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"
            android:text="@string/open_safety"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/ic_menu_info_details"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

    </LinearLayout>
</ScrollView>
