<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- ScrollView の直下はこの1要素のみ -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="今日のミッション："
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnMissionAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="開く"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvToday"
            android:text="今日の話"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnReadToday"
            android:text="今日の話を読む"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSettings"
            android:text="設定"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvStreak"
            android:text="連続: 0日"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <view
            class="com.hodaka.storyvoice.ui.calendar.ReadingCalendarView"
            android:id="@+id/readingCalendar"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingClass" />

        <!-- 区切り線（任意、見た目の整理） -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/listDivider" />

        <!-- 誤タップ防止の余白 -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- ★ バナー広告（LinearLayout の最後に配置） -->
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/ad_banner_content_desc"
            ads:adSize="BANNER"
            ads:adUnitId="@string/admob_banner_home" />

    </LinearLayout>
</ScrollView>
